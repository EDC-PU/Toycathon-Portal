
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true || request.auth.token.admin == true;
    }

    // Users can only read and write their own data.
    // Admins can read/write any user's data.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid != null;
      allow delete: if isAdmin();
    }
    
    // Announcements can be read by any authenticated user.
    // Only admins can create, update, or delete announcements.
    match /announcements/{announcementId} {
        allow read: if request.auth.uid != null;
        allow create, update, delete: if isAdmin();
    }

    // Anyone can read toy ideas (for a future public gallery, for example)
    // Only authenticated users can create their own ideas.
    // Users can only update/delete their own ideas.
    match /toy-ideas/{ideaId} {
      allow read: if true;
      allow create: if request.auth.uid != null;
      allow update, delete: if request.auth.uid == resource.data.authorId || isAdmin();
    }
  }
}
