
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin status
    function isAdmin() {
      // Check if the user document exists and if the isAdmin field is true.
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Users collection
    match /users/{userId} {
      // Admins can read and write to any user document
      allow read, write: if isAdmin();
      // An authenticated user can create their own user document
      allow create: if request.auth.uid == userId;
      // A user can read and update their own document
      allow read, update: if request.auth.uid == userId;
    }

    // Teams collection
    match /teams/{teamId} {
      // Admins can perform any action on any team
      allow read, write, delete: if isAdmin();
      // Any authenticated user can create a new team
      allow create: if request.auth != null;
      // The creator of the team can read or update it
      allow read, update: if request.auth != null && resource.data.creatorUid == request.auth.uid;
    }

    // Submissions collection
    match /submissions/{teamId} {
       // Admins can read or delete any submission
      allow read, delete: if isAdmin();
      // Authenticated users can read submissions
      allow read: if request.auth != null;
       // Users can create/update their own submission if they are the creator of the team
      allow create, update: if request.auth != null && get(/databases/$(database)/documents/teams/$(teamId)).data.creatorUid == request.auth.uid;
    }

    // Announcements can be read by anyone, but only created/updated/deleted by admins
    match /announcements/{announcementId} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }
    
    // Categories can be read by anyone, but only created/updated/deleted by admins
    match /categories/{categoryId} {
        allow read: if true;
        allow write, delete: if isAdmin();
    }

    // Themes can be read by anyone, but only created/updated/deleted by admins
    match /themes/{themeId} {
        allow read: if true;
        allow write, delete: if isAdmin();
    }

    // Counters collection can only be accessed by authenticated users during transactions (for team ID generation)
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }
  }
}
